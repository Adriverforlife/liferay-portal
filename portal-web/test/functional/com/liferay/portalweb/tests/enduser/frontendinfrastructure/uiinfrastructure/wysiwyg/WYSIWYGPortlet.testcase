@component-name = "portal-frontend-infrastructure"
definition {

	property portal.release = "false";
	property portal.upstream = "true";
	property testray.component.names = "WYSIWYG";
	property testray.main.component.name = "User Interface";

	setUp {
		User.firstLoginPG();

		ProductMenu.gotoPortlet(
			category = "Site Builder",
			panel = "Site Administration",
			portlet = "Pages");

		SitePages.addPublicPage(pageName = "WYSIWYG Page");
	}

	tearDown {
		Page.tearDownCP();
	}

	@priority = "4"
	test AddContent {
		Navigator.gotoPage(pageName = "WYSIWYG Page");

		Portlet.addPG(portletName = "WYSIWYG");

		Portlet.gotoPortletOptions(
			portletName = "WYSIWYG",
			portletOption = "Configuration");

		Pause(locator1 = "15000");

		SelectFrame(locator1 = "IFrame#DIALOG");

		SelectFrame.selectFrameNoLoading(locator1 = "CKEditor#BODY_FIELD_IFRAME");

		KeyPress(
			locator1 = "CKEditor#BODY",
			value1 = "WYSIWYG Test Content");

		AssertTextEquals.assertTextCaseSensitive(
			locator1 = "CKEditor#BODY",
			value1 = "WYSIWYG Test Content");

		takeScreenshot();

		Click(locator1 = "Button#SAVE");

		Alert.viewSuccessMessage();

		SelectFrameTop();

		Click(locator1 = "Modal#CLOSE_BUTTON");

		AssertTextEquals.assertPartialText(
			locator1 = "Portlet#PORTLET_CONTENT",
			value1 = "WYSIWYG Test Content");

		takeScreenshot();
	}

}